{
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(dart test:*)",
      "Bash(dart analyze:*)",
      "WebFetch(domain:dcm.dev)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // .tool_input.filePath' | xargs dart format"
          }
        ]
      }
    ]
  }
}
